<style>
    .table td,
    .table th {
        vertical-align: middle;
    }
</style>

{{#if productos.length}}
<h2>Lista de Productos</h2>
<div class="table-responsive">
    <table class="table table-dark">
        <tr>
            <th>Nombre:</th>
            <th>Precio:</th>
            <th>Foto Url:</th>
        </tr>
        {{#each productos}}
        <tr>
            <th>{{this.nombre}}</th>
            <th>{{this.precio}}</th>
            <th>{{this.foto}}</th>
        </tr>
        {{/each}}
        {{!-- Recorrer productos para mostrar en la tabla --}}
    </table>
</div>
{{/if}}