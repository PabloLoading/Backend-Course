doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  title Vista de Productos
  meta(name='viewport' content='width=device-width, initial-scale=1.0, viewport-fit=cover')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css' integrity='sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l' crossorigin='anonymous')
.container.mt-3
  include ./styles/vista.pug
  // incrustar estilos
  .jumbotron
    h1 Vista de Productos
    br
    // el valor hayProductos deberia llegar del servidor como un flag boolean para saber si el arreglo esta vacio o lleno
    if productos.length>0
      .table-responsive
        table.table.table-dark
          each val in productos
            tr
              th= val.title
              th= val.price
              th= val.thumbnail
        // implementar foreach para cargar productos
    else 
      h3.alert.alert-warning No se encontraron productos
    br
    a.btn.btn-primary(href='/' type='button') Cargar un nuevo producto
